<html>
	<head>
		<link rel="stylesheet" href="/styles/uikit.css"/> 
		<script src="/js/jquery.js"></script>
		<script src="/js/alert.js"></script>
		<script>
			var tinderPeople = tinderPeople || [];
			var currentPerson = currentPerson || null;
			var list = {};
			var personCount = 0; 

			$(document).ready(function(){
				pollForPeople();
				nextPerson();

				// get data
				function pollForPeople() {
					$.ajax({
						url: '/main/get',
						data: '',
						type: 'GET',
						crossDomain: true,
						success: function(data){
							list = data;
							console.log(list);
							console.log(list.results[0].photos[0].processedFiles[0].url);
							nextPerson();
						},
						error: function(){
							console.log("Could not load data.")
						}						
					});
				}

				// listen for key taps
				$(document).keydown(function(event){
    				if (event.keyCode == 39) {
    					alert("right");
    					$.UIkit.notify("Right", {pos:'top-right'});
    					nextPerson();
    				};

    				if (event.keyCode == 37) {
    					alert("left");
    					$.UIkit.notify("Left", {pos:'top-left'});
    					nextPerson();
    				};	               
		        });

				// now replaces user object with image 
				function nextPerson(){
					$('#main-img').attr('src', list.results[personCount].photos[personCount].processedFiles[0].url);
					$("#person-age").text((list.results[personCount].birth_date-list.results[personCount].ping_time));
					$("#person-name").text(list.results[personCount].name);
					$("#person-desc").text(list.results[personCount].bio);
					// if (personCount >= 1) {
					// 	$("#person-past").text(list.(personCount-1).name);
					// };	
 
					personCount++;				
				}
			});
		</script>
	</head>
	<body>
	<section style="">
		Meet NAME.
	</section>
		<div id="person">
			<div id="person-images">
				<img id="main-img" src="/images/tinder.jpg" height="75%" id="tinder-image" />
			</div>
			<div id="person-details">
				<div id="person-age"></div>
				<div id="person-name"></div>
				<div id="person-desc"></div>
				<div id="past"></div>
			</div>
		</div>
	</body>
</html>