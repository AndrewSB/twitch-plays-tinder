<html>
	<head>
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/uikit/2.10.0/css/addons/uikit.almost-flat.addons.min.css">
		<link rel="stylesheet" href="/styles/styles.css"/>
		<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.3/moment.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/uikit/2.10.0/js/addons/notify.min.js"></script>
		<script>
			var list = {};
			var personCount = 0; 
			var pastPeople = {};

			$(document).ready(function(){
				
				// listen for key taps
				$(document).keydown(function(event){
    				if (event.keyCode == 39) {
    					alert("right");
    					nextPerson();
    				};

    				if (event.keyCode == 37) {
    					alert("left");
    					nextPerson();
    				};	               
		        });

		        pollForPeople();
				nextPerson();
		        
				// get data
				function pollForPeople() {
					$.ajax({
						// url: '/main/get',
						url: '../js/sample.json',
						data: '',
						type: 'GET',
						crossDomain: true,
						success: function(data){
							list = data;
							console.log(list);
							console.log(list.results[0].photos[0].processedFiles[0].url);
							nextPerson();
						},
						error: function(){
							console.log("Could not load data.")
						}						
					});
				}

				// now replaces user object with image 
				function nextPerson(){
					$('#main-img').attr('src', list.results[personCount].photos[personCount].processedFiles[0].url);
					$("#person-age").text((list.results[personCount].birth_date).slice(0,10) -(list.results[personCount].ping_time).slice(0,10));
					$("#person-name").text(list.results[personCount].name);
					$("#person-desc").text(list.results[personCount].bio);
					// if (personCount >= 1) {
					// 	$("#person-past").text(list.(personCount-1).name);
					// };	
 
					personCount++;				
				}
			});
		</script>
	</head>
	<body>
		<div id="person">
			<div id="person-images">
				<img id="main-img" src="/images/tinder.jpg" height="75%" id="tinder-image" />				
			</div>
			<div id="person-details">
				<div id="person-age"></div>
				<div id="person-name"></div>
				<div id="person-desc"></div>
				<div id="past"></div>
			</div>
		</div>
	</body>
</html>